<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="category_tabs_snippet" name="Category Snippet">
        <section class="s_category">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-12 text-center mb-5">
                        <h2>Khushi</h2>
                        <p>Explore our delicious food categories</p>
                    </div>
                </div>
                <div class="row categories-container">
                    <!-- Dynamic content -->
                </div>
            </div>
        </section>
    </template>

    <template id="snippet_categories_options" inherit_id="website.snippet_options">
        <xpath expr="." position="inside">
            <div data-js="CategorySnippet" data-selector=".s_category">
                <we-row string="Categories">
                    <we-select string="Category 1" data-name="category_1">
                        <t t-foreach="request.env['product.public.category'].search([])" t-as="category">
                            <we-button t-att-data-select-value="category.id" t-esc="category.name"/>
                        </t>
                    </we-select>
                    <we-select string="Category 2" data-name="category_2">
                        <t t-foreach="request.env['product.public.category'].search([])" t-as="category">
                            <we-button t-att-data-select-value="category.id" t-esc="category.name"/>
                        </t>
                    </we-select>
                    <we-select string="Category 3" data-name="category_3">
                        <t t-foreach="request.env['product.public.category'].search([])" t-as="category">
                            <we-button t-att-data-select-value="category.id" t-esc="category.name"/>
                        </t>
                    </we-select>
                </we-row>
            </div>
        </xpath>
    </template>
</odoo>